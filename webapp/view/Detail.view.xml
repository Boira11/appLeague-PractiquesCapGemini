<mvc:View
    controllerName="appleagues.controller.Detail"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:form="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="detailPage"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle id="idObjectPageDynamicHeaderTitle">
                <expandedHeading>
                    <m:Title
                        id="idTitleHeading"
                        text="{name}"
                        wrapping="true"
                        class="sapUiSmallMarginEnd"
                    />
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox
                        id="idFlexBox"
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <m:Avatar
                            id="idAvatar"
                            src="sap-icon://study-leave"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Title
                            id="idTitleFlexBox"
                            text="{name}"
                            wrapping="true"
                        />
                    </m:FlexBox>
                </snappedHeading>

                <navigationActions>
                    <m:OverflowToolbarButton
                        id="declineBtn"
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="onCloseDetailPress"
                        tooltip="Close middle column"
                    />
                </navigationActions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                id="idFlexbox"
                wrap="Wrap"
                fitContainer="true"
                alignItems="Stretch">
                <m:Avatar
                    id="_IDGenAvatar2"
                    src="sap-icon://study-leave"
                    displaySize="S"
                    class="sapUiTinyMarginEnd"/>
                <m:VBox
                    id="idVBox"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:Label
                        id="idLabelVBox"
                        text="{i18n>label.nameLeague}"/>
                    <m:Text
                        id="idNameLeague"
                        text="{name}"/>
                </m:VBox>

                <m:VBox
                    id="idVBox2"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:Label
                        id="idLabelVBox2"
                        text="{i18n>label.countryLeague}"/>
                    <m:Text
                        id="idCountryLeague"
                        text="{country}"/>
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection
                id="_IDGenObjectPageSection2"
                title="{i18n>section.teams}">
                <subSections>
                    <ObjectPageSubSection id="idObjectPageSubSection">
                        <blocks>
                            <m:VBox
                                id="_IDGenVBox5"
                                class="sapUiSmallMargin">
                                <smartTable:SmartTable
                                    id="smartTableTeams"
                                    tableType="ResponsiveTable"
                                    showFullScreenButton="true"
                                    entitySet="Leagues"
                                    app:useSmartToggle="true"
                                    useTablePersonalisation="false"
                                    tableBindingPath="teams"
                                    class="sapUiResponsiveContentPadding"
                                    showRowCount="true"
                                    header="{i18n>section.teams}"
									requestAtLeastFields="name,city,stadium"
                                    enableAutoBinding="true">
                                    
                                    <smartTable:customToolbar>
                                        <m:Toolbar
                                            id="idToolbar"
                                            class="AdminToolbar">
                                            <m:ToolbarSpacer
                                                id="idToolbarSpacer"/>
                                            <m:Button
                                                id="idButtonAddTeam"
                                                icon="sap-icon://add"
                                                text="{i18n>btn.create}"
                                                type="Default"/>
                                        </m:Toolbar>
                                    </smartTable:customToolbar>
                                    <m:Table
                                        id="idTableDetail"
                                        growing="true"
                                        growingThreshold="20"
                                        growingScrollToLoad="true"
                                        >
                                        <m:headerToolbar>
                                            <m:Toolbar id="idToolbar2">
                                                <m:Title
                                                    id="idTitleToolbar"
                                                    text="{i18n>table.detail.title}"/>
                                            </m:Toolbar>
                                        </m:headerToolbar>
                                        <m:columns>
											<m:Column id="idColumnName">
                                                <m:Text
                                                    id="idTextColumnName"
                                                    text="{i18n>table.detail.column.name}"/>
                                            </m:Column>
											<m:Column id="idColumnCity">
                                                <m:Text
                                                    id="idTextColumnCity"
                                                    text="{i18n>table.detail.column.city}"/>
                                            </m:Column>
											<m:Column id="idColumnStadium">
                                                <m:Text
                                                    id="idTextColumnStadium"
                                                    text="{i18n>table.detail.column.stadium}"/>
                                            </m:Column>
                                          
                                        </m:columns>
                                        <m:items>
                                            <m:ColumnListItem
                                                id="idColumnListItem">
                                                <m:cells>
                                                    <m:ObjectIdentifier
                                                        id="idNameTeam"
                                                        title="{name}"/>
                                                    <m:Text
                                                        id="idCityTeam"
                                                        text="{city}"/>
                                                    <m:Text
                                                        id="idStadiumTeam"
                                                        text="{stadium}"
                                                    />
                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                </smartTable:SmartTable>
                            </m:VBox>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
